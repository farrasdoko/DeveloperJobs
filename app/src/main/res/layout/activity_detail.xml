<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/test"/>

        <TextView
            android:id="@+id/txt_title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Software Developer"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/shree714"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="2"
            android:padding="5dp">

            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_company_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Jane Street ● "
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="end"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_location_detail"
                android:textSize="18dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New York, NY; London, UK; Hong Kong"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_created_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday Nov 01 2018 ● "
                android:textSize="17sp"
                android:fontFamily="@font/shree714"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_type_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Time"
                android:textSize="17sp"
                android:fontFamily="@font/shree714"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Description"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_description_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="@string/contoh_description"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How To Apply"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_howto_detail"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="@string/contoh_howto"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_company_url_detail"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go To Company URL"
                android:textColor="#00f"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_apply_detail"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:textColor="#00f"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>